                    <div class="login-container-div-2">
                        <form class="form-register" action="/users/registro" method="POST" enctype="multipart/form-data">
                            <h2>Registrate:</h2>

                            <div class="register-field">
                                <i class="fas fa-user"></i>
                                <input class="controls" type="text" name="user" id="user" placeholder="Usuario">
                                <span></span>
                            </div>

                            <div class="register-field">
                                <i class="fas fa-user"></i>
                                <input class="controls" type="text" name="name" id="name" placeholder="Nombre">
                                <span></span>
                            </div>

                            <div class="register-field">
                                <i class="fas fa-ghost"></i>
                                <input class="controls" type="text" name="surname" id="surname"
                                    placeholder="Apellido">
                                <span></span>
                            </div>

                            <div class="register-field">
                                <i class="fas fa-envelope"></i>
                                <input class="controls" type="email" name="email" id="email" placeholder="Correo">
                                <span></span>
                            </div>

                            <div class="register-field">
                                <i class="fas fa-lock"></i>
                                <input class="controls" type="password" name="pass" id="pass"
                                    placeholder="Contraseña">
                                <span></span>
                            </div>

                            
                        <div class="register-field">
                            <label for="image" class="admin-user-label">Foto de perfil:</label>
                            <input id="image" class="admin-user-img" type="file" name="image">
                            <span></span>
                        </div>

                            <div class="form-bottom">
                                <input type="checkbox" name="terms">
                                <label for="terms" class="link">Estoy de acuerdo con los<a href="#"> Términos y
                                        condiciones</a></label>
                            </div>

                            <div class="form-button">
                                <button type="submit" class="send-button">Registrarme</button>
                            </div>

                            <div class="form-bottom">
                                <p class="link">¿Ya tenes cuenta? <a href="/users/ingreso">Ingresar</a></p>
                            </div>
                        </form>
                    </div>
