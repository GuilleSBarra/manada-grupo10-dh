<%- include('../partials/head.ejs') %>

    <body class="login-body">
        <%- include('../partials/header') %>

            <main class="login-main-mobile login-main-desktop">
                <section class="login-register-container">
                    <div class="login-container-div-2">
                        <form class="form-register" action="/users/registro" method="POST" enctype="multipart/form-data">
                            <h2>Registrate:</h2>

                            <div class="register-field">
                                <i class="fas fa-user"></i>
                                <input class="controls register-user" type="text" name="user" id="user" placeholder="Usuario" value="<%= locals.oldData ? oldData.user : null %>">
                                <span class="error-js"></span>
                                <% if (locals.errors && errors.user) { %>
									<div class="error-text">
										<%= errors.user.msg %>
									</div>
								<% } %>
                            </div>

                            <div class="register-field">
                                <i class="fas fa-user"></i>
                                <input class="controls register-name" type="text" name="name" id="name" placeholder="Nombre" value="<%= locals.oldData ? oldData.name : null %>">
                                <span class="error-js"></span>
                                <% if (locals.errors && errors.name) { %>
									<div class="error-text">
										<%= errors.name.msg %>
									</div>
								<% } %>
                            </div>

                            <div class="register-field">
                                <i class="fas fa-ghost"></i>
                                <input class="controls register-surname" type="text" name="surname" id="surname" placeholder="Apellido" value="<%= locals.oldData ? oldData.surname : null %>">
                                <span class="error-js"></span>
                                    <% if (locals.errors && errors.surname) { %>
                                        <div class="error-text">
                                            <%= errors.surname.msg %>
                                        </div>
                                    <% } %>
                            </div>

                            <div class="register-field">
                                <i class="fas fa-envelope"></i>
                                <input class="controls register-email" type="email" name="email" id="email" placeholder="Correo" value="<%= locals.oldData ? oldData.email : null %>">
                                <span class="error-js"></span>
                                <% if (locals.errors && errors.email) { %>
									<div class="error-text">
										<%= errors.email.msg %>
									</div>
								<% } %>
                            </div>

                            <div class="register-field">
                                <i class="fas fa-lock"></i>
                                <input class="controls register-password" type="password" name="password" id="password" placeholder="Contraseña">
                                <span class="error-js"></span>
                                    <% if (locals.errors && errors.password) { %>
                                        <div class="error-text">
                                            <%= errors.password.msg %>
                                        </div>
                                    <% } %>
                            </div>

                            
                            <div class="register-field">
                                <label for="image" class="admin-user-label">Foto de perfil:</label>
                                <input id="image" class="admin-user-img" type="file" name="image">
                                <% if (locals.errors && errors.image) { %>
                                    <div class="error-text">
                                        <%= errors.image.msg %>
                                    </div>
                                <% } %>
                            </div>

                            <div class="form-bottom">
                                <input type="checkbox" name="terms">
                                <label for="terms" class="link">Estoy de acuerdo con los<a href="#"> Términos y
                                        condiciones</a></label>
                            </div>

                            <div class="form-button">
                                <button type="submit" class="send-button">Registrarme</button>
                            </div>

                            <div class="form-bottom">
                                <p class="link">¿Ya tenes cuenta? <a href="/users/ingreso">Ingresar</a></p>
                            </div>
                        </form>
                    </div>
                </section>
            </main>

            <%- include('../partials/footer') %>
    </body>

    </html>