<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>

            <main class="admin-products-main-mobile admin-products-main-desktop">                
                <section class="admin-editProduct-container">
                    <div class="admin-editProduct-image">
                        <img src=<%= product.image %> alt="product image">
                    </div>

                    <div class="admin-products-container">
                        <form class="admin-products-form" method="POST" action="/admin/edit-product/<%= product.id %>?_method=PUT">

                            <h2 class="admin-products-title">Editar Producto:</h2>

                            <div class="admin-products-field">
                                <label class="admin-products-label">Imágen del Producto:</label>
                                <input class="admin-products-img" type="file" name="image">
                                <span></span>
                            </div>

                            <div class="admin-products-field">
                                <input class="admin-products" type="text" name="name" placeholder="Nombre del producto"
                                    value="<%= product.name %>">
                                <span></span>
                            </div>

                            <div class="admin-products-field">
                                <input class="admin-products" type="text" name="description"
                                    placeholder="Descripción del producto" value="<%= product.description %>">
                                <span></span>
                            </div>

                            <div class="admin-products-field">
                                <label class="admin-products-label" for="category">Categoría</label>
                                <div class="admin-products-control">
                                    <select name="category" id="category">

                                        <% switch (product.category) { 
                                            case product.category = "Jinete" : %>
                                                <option value="Rider" selected>Jinete</option>
                                                <option value="horseCare">Cuidados del caballo</option>
                                                <option value="Veterinary">Veterinaria</option>
                                                <option value="Accesories">Equipo y accesorios</option>
                                        <% break;
                                        
                                        case product.category = "Cuidados del caballo" : %>
                                                <option value="Rider">Jinete</option>
                                                <option value="horseCare" selected>Cuidados del caballo</option>
                                                <option value="Veterinary">Veterinaria</option>
                                                <option value="Accesories">Equipo y accesorios</option>
                                        <% break;

                                        case product.category = "Veterinaria" : %>
                                                <option value="Rider">Jinete</option>
                                                <option value="horseCare">Cuidados del caballo</option>
                                                <option value="Veterinary" selected>Veterinaria</option>
                                                <option value="Accesories">Equipo y accesorios</option>
                                        <% break;

                                        case product.category = "Equipo y Accesorios" : %>
                                                <option value="Rider">Jinete</option>
                                                <option value="horseCare">Cuidados del caballo</option>
                                                <option value="Veterinary">Veterinaria</option>
                                                <option value="Accesories" selected>Equipo y accesorios</option>
                                        <% break;
                                    } %>

                                    </select>
                                </div>
                            </div>

                            <div class="admin-products-field">
                                <label class="admin-products-label" for="size">Talle</label>
                                <div class="admin-products-control">
                                    <select name="size" id="size">

                                        <% switch (product.size) { 
                                            case product.size = "XS" : %>
                                                <option value="XS" selected>XS</option>
                                                <option value="S">S</option>
                                                <option value="M">M</option>
                                                <option value="L">L</option>
                                                <option value="XL">XL</option>
                                            <% break;
                                            
                                            case product.size = "S" : %>
                                                <option value="XS">XS</option>
                                                <option value="S" selected>S</option>
                                                <option value="M">M</option>
                                                <option value="L">L</option>
                                                <option value="XL">XL</option>
                                            <% break;

                                            case product.size = "M" : %>
                                                <option value="XS">XS</option>
                                                <option value="S">S</option>
                                                <option value="M" selected>M</option>
                                                <option value="L">L</option>
                                                <option value="XL">XL</option>
                                            <% break;

                                            case product.size = "L" : %>
                                                <option value="XS">XS</option>
                                                <option value="S">S</option>
                                                <option value="M">M</option>
                                                <option value="L" selected>L</option>
                                                <option value="XL">XL</option>
                                            <% break;
                                        } %>

                                    </select>
                                </div>
                            </div>

                            <div class="admin-products-field">
                                <input class="admin-products" type="text" name="price" id="newProductPrice"
                                    placeholder="Precio del Producto" value="<%= product.price %>">
                                <span></span>
                            </div>

                            <div class="admin-products-field">
                                <input class="admin-products" type="text" name="keywords" id="keywords"
                                    placeholder="Palabras clave" value="<%= product.keywords %>">
                                <span></span>
                            </div>

                            <div class="admin-products-field">
                                <label class="admin-products-label" for="in-sale">En oferta</label>
                                <div class="admin-products-field-inSale">
                                    <% if ( product.inSale == true ){%>
                                        <input class="field-inSale" id="in-sale" type="radio" name="inSale" value="true" checked>Si</input>
                                        <br>
                                        <input class="field-inSale" id="in-sale" type="radio" name="inSale" value=false>No</input>
                                    <% } else { %>
                                        <input class="field-inSale" id="in-sale" type="radio" name="inSale" value="true">Si</input>
                                        <br>
                                        <input class="field-inSale" id="in-sale" type="radio" name="inSale" value=false checked>No</input>
                                    <% } %>
                                </div>
                            </div>

                            <div class="admin-products-field">
                                <input class="admin-products" type="text" name="discountPrice" id="discountPrice"
                                    placeholder="Precio en descuento" value="<%= product.discountPrice %>">
                                <span></span>
                            </div>

                            <div class="admin-products-field">
                                <input class="admin-products" type="text" name="discount" id="discount"
                                    placeholder="Porcentaje de descuento" value="<%= product.discount %>">
                                <span></span>
                            </div>

                            <div class="admin-products-form-button">
                                <button type="submit" class="admin-products-button">Modificar</button>
                            </div>
                        </form>
                    </div>
                </section>
            </main>

            <%- include('../partials/footer') %>
    </body>

    </html>